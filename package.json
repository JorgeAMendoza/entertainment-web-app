{
  "name": "entertainment-web-app",
  "version": "1.0.0",
  "description": "Entertainment web application challenge from frontend mentor",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:frontend:dev": "cd client && npm run start",
    "start:backend:dev": "cd server && nodemon ./src/index.ts",
    "start:backend:test": "cd server && npm run server:test",
    "start:dev": "npm run start:frontend:dev & npm run start:backend:dev",
    "test:server:api": "cd server && npm run test:api",
    "lint:backend": "eslint ./server/src/**/*.{ts,tsx}",
    "docker:mongo:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:mongo:test": "docker-compose -f docker-compose.test.yml up",
    "docker:mongo:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:mongo:test:down": "docker-compose -f docker-compose.test.yml down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JorgeAMendoza/entertainment-web-app.git"
  },
  "keywords": [
    "Full",
    "stack",
    "react",
    "graphql",
    "apollo"
  ],
  "author": "Jorge A. Mendoza",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JorgeAMendoza/entertainment-web-app/issues"
  },
  "homepage": "https://github.com/JorgeAMendoza/entertainment-web-app#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.30.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1"
  }
}
